//assaignment operators
/*fun main()
 {
    var a = 10
    var b = 5

    // Basic assignment
    a = b  // a becomes 5

    // Addition assignment
    a += b // equivalent to a = a + b, so a becomes 10

    // Subtraction assignment
    a -= b // equivalent to a = a - b, so a becomes 5

    // Multiplication assignment
    a *= b // equivalent to a = a * b, so a becomes 25

    // Division assignment
    a /= b // equivalent to a = a / b, so a becomes 5

    // Modulus assignment
    a %= b // equivalent to a = a % b, so a becomes 0

    println("Final value of a: $a")
}*/

/*
fun main() {
    var a = 5

    // Unary plus
    val unaryPlus = +a  // The result is 5 (same as the value of 'a')

    // Unary minus
    val unaryMinus = -a // The result is -5 (negates the value of 'a')

    // Increment
    a++  // a becomes 6 (increments the value by 1)

    // Decrement
    a--  // a becomes 5 again (decrements the value by 1)

    // Not
    val isTrue = true
    val isFalse = !isTrue  // The result is false (negates the boolean value)

    println("Unary plus: $unaryPlus")
    println("Unary minus: $unaryMinus")
    println("After increment: $a")
    a--
    println("After decrement: $a")
    println("Not operator: $isFalse")
}*/


