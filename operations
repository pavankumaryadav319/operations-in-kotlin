/*fun main()
{
    val num1 = 10
    val num2 = 20
    val operator = "%"
    if(operator == "+"){
        println("Result : ${num1+num2}")
    }
    else if(operator == "-"){
        println("Result : ${num1-num2}")
    }
    else if(operator == "*"){
         println("Result : ${num1*num2}")
    }
    else if(operator == "/"){
        println("Result : ${num1/num2}")
    }
    else if(operator == "%"){
        println("Result : ${num1%num2}")
    }
}*/

